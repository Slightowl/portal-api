{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Hangfire": "Information"
    }
  },

  "AllowedHosts": "#{Allowed_Hosts}#",

  "ConnectionStrings": {
    "PortalDb": "#{ConnectionStrings__PortalDb}#"
  },

  "Portal": {
    "Audit": {
      "UserEnabled": "#{Portal__Audit__UserEnabled}#"
    },
    "Jobs": {
      "LoginCacheCleanupCron": "#{Portal__Jobs__LoginCacheCleanupCron}#",
      "OutboxCleanupCron": "#{Portal__Jobs__OutboxCleanupCron}#",
      "OutboxProcessorCron": "#{Portal__Jobs__OutboxProcessorCron}#"
    },
    "Login": {
      "ChallengeExpiryMinutes": "#{Portal__Login__ChallengeExpiryMinutes}#"
    },
    "Outbox": {
      "ProcessFailureLimit": "#{Portal__Outbox__ProcessFailureLimit}#"
    }
  },

  "SEQ": {
    "Enabled": "#{SEQ__Enabled}#",
    "ServerAddress": "#{SEQ__ServerAddress}#",
    "ApiKey": "#{SEQ__ApiKey}#",
    "BufferFilePath": "#{SEQ__BufferFilePath}#",
    "MinLogLevel":  "#{SEQ__MinLogLevel}#"
  },

  "GovNotify": {
    "BaseUrl": "#{GovNotify__BaseUrl}#",
    "ApiKey": "#{GovNotify__ApiKey}#",
    "SmsSenderIds": {
      "NHSChristie": "#{GovNotify__SmsSenderIds__NHSChristie}#",
      "GOVUK": "#{GovNotify__SmsSenderIds__GOVUK}#"
    },
    "AuthTokens": {
      "Primary": "#{GovNotify__AuthTokens__Primary}#",
      "Secondary": "#{GovNotify__AuthTokens__Secondary}#",
      "ChristieOnly": "#{GovNotify__AuthTokens__ChristieOnly}#"
    }
  },

  "JWT": {
    "Audience": "#{JWT__Audience}#",
    "Authority": "#{JWT__Authority}#",
    "RequiresHttpsMetadata": "#{JWT__RequiresHttpsMetadata}#"
  },

  "Identity": {
    "PromsSecret": "#{Identity__PromsSecret}#",
    "EhrSecret": "#{Identity__EhrSecret}#"
  },

  "CWP": {
    "BaseUrl": "#{CWP__BaseUrl}#"
  },

  "EHR": {
    "BaseUrl": "#{EHR__BaseUrl}#",
    "SubjectNamespace":  "#{EHR__SubjectNamespace}#"
  }
}
